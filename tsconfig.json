{
  "compilerOptions": {
    "target": "ES2018",
    "module": "Node16",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018"
     ],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16"
  },
  "include": [
    "src"
  ]
}
